<%= turbo_frame_tag "search_results" do %>
  <% users.each do |u| %>
    <li class="mt-3">
      <div class="d-flex justify-content-between">
        <div class="d-flex">
          <%= image_tag u.profile_pic.attached? ? u.profile_pic : 'profile_pic.jpg', class: "img-thumbnail rounded-circle", style:"width: 2.5rem; height: 2.5rem" %>
          <div class="d-flex flex-column mx-3 justify-content-center">
            <small class="fw-bold" style="max-width:5rem; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; max-width:10rem"><%= link_to u, class:"a-decoration-none", data: { turbo: false } do %><%= u.username %><% end %></small>
          </div>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
