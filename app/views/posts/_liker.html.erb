<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag liker.profile_pic.attached? ? liker.profile_pic : 'profile_pic.jpg', class: "img-thumbnail rounded-circle", style:"width: 2.5rem; max-height:2.5rem" %>
    <div class="d-flex flex-column mx-3 justify-content-center">
      <small class="fw-bold" style="max-width:10rem; overflow: hidden; white-space: nowrap; text-overflow: ellipsis"><%= link_to liker, class:"a-decoration-none", data: { turbo: false } do %><%= liker.username %><% end %></small>
    </div>
  </div>

  <%= render 'layouts/shared/follow_state', user: liker %>
</div>
